<div class="new_comment">
<%if notice%>
  <p id="notice"><%= notice %></p>
<% end %>
<link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>Написать комментарий:</h3>
    <%= form_for(@comment) do |f| %>
    <%= f.error_messages :header_message => "Ошибка заполнения формы",
  :message => "Вы должны исправить эти ошибки:",
  :header_tag => :h3%>
      <p>
        <%=f.text_area :name, placeholder: "Ваше имя..."%>
      </p>
      <p>
        <%=f.email_field :email, placeholder: "Ваш email..."%>
      </p>
      <p>
        <%= f.text_area :body, placeholder: "Комментарий...", rows: 6 %>
      </p>
      <p>
      <%= f.submit "Написать" %>
      </p>
    <% end %>
  </div>   
</div>
<div class="new">
  <h1>Комментарии</h1>
    <table>
      <thead>
        <tr>
          <th>Имя</th>
          <th>Email</th>
          <th>Комментарий</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.name%></td>
            <td><%= comment.email%></td>
            <td><%= comment.body %></td>
            <%if signed_in?%>
              <td>
                <%=link_to 'Удалить',comment, method: :delete, data: { confirm: "точно?"}, :class => 'deleteAction' %>
              </td>
            <%end%>
          </tr>
          <%end%>
      </tbody>
    </table><br>
  </div> 
</div>


 <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
 <div class="show">
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Тип жилья: </strong>
    <%if @torre_travel.housing == "house" %>
      <%= "Дом" %>
    <%elsif @torre_travel.housing == "flat"%>
      <%= "Квартира"%>
    <%elsif @torre_travel.housing == "bungalo"%>
      <%= "Бунгало"%>
    <%else%>
      <%= "Челет"%>
    <%end%>
  </p>

  <p>
    <strong>Цена жилья: </strong>
    <%= @torre_travel.price %> €
  </p>

  <p>
    <strong>Расстояние до моря: </strong>
    <%if @torre_travel.distance == "first_line" %>
      <%= "1ая линия" %>
    <%else%>
      <%= " 2ая линия"%>
    <%end%>
  </p>

  <p>
    <strong>Описание на рус: </strong>
    <%= @torre_travel.description %>
  </p>

   <p>
    <strong>Описание на исп: </strong>
    <%= @torre_travel.description_es %>
  </p>
<%if signed_in?%>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Image ID:</th>
      <th>Description to image:</th>
    </tr>
  </thead>
  <tbody>
    <% @torre_travel.images.each do |image|%>
    <tr>
        <td><%= image.id%></td>
        <td><%= image.description%></td>
        <%end%>
    </tr>
  </tbody>
</table>

  <%= form_for([@torre_travel, @torre_travel.images.build]) do |f| %>
      <%= render partial: "image/form", locals:{ f: f} %>
    <p>
    <%= f.submit %>
    </p>
  <% end %>
  <%= link_to 'Правка', edit_torre_travel_path(@torre_travel) %> |
<%end%>
  <%= link_to 'Вернуться', torre_travels_path %>
</div>